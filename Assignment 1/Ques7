//BINARY TO DECIMAL AND DECIMAL TO BINARY CONVERSION

#include <stdio.h>

int main() {
    long long binary;
    int decimal = 0, base = 1;

    printf("Enter a binary number: ");
    scanf("%lld", &binary);

    while (binary) {
        decimal += (binary % 10) * base;
        binary /= 10;
        base *= 2;
    }

    printf("Decimal equivalent: %d\n", decimal);

    return 0;
}
