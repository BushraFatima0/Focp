//TO CHECK WHETHER A NUMBER IS PERFECT NUMBER OR NOT

#include <stdio.h>
int main() 
{
    //ques 5
    int num,sum;
    printf("Enter a number:\n");
    scanf("%d",&num);
    for(int i=1; i<num;i++)
    {if(num%i==0)
        sum+=i;}
    if(sum==num)
    printf("It's a Perfect Number");
    else
    printf("It's not a Perfect No.");
    return 0;
}
